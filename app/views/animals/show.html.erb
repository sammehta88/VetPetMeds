<div class="row">
  <div class="col s12 m6 l4">
    <div class="card-panel center">
      <h2><%= @animal.name %></h2>
      <p><%= @animal.species %></p>
      <p><%= @animal.weight %> lbs</p>
    </div>
  </div>

  <div class="col s12">
    <%= link_to 'Edit Animal',  edit_animal_path(@animal), class: 'btn' %>
    <%= link_to 'Delete Animal',  @animal, method: :delete, class: 'btn' %>
    <%= link_to 'New Dose', new_animal_dose_path(@animal), class: 'btn' %>
  </div>
</div>

<h3>Medication Log</h3>

<table class="striped">
  <thead>
    <tr>
      <th><%= animal_doses_link "Drug Name", "drugs.name" %></th>
      <th><%= animal_doses_link "Dosage" %></th>
      <th><%= animal_doses_link "Date", "created_at" %></th>
      <th><%= animal_doses_link "User", "users.email" %></th>
    </tr>
  </thead>

  <% @doses.each do |dose| %>
    <tr>
      <td><%= dose.drug.name %></td>
      <td><%= dose.dosage %> cc</td>
      <td><%= dose.created_at.strftime("%m/%d/%Y") %></td>
      <td><%= dose.user.email %></td>
    </tr>
  <% end %>
</table>
