<h2>Medication Log</h2>
<table class="striped">
  <thead>
    <tr>
      <th><a href="/doses/sort/animal_id">Patient</a></th>
      <th><a href="/doses/sort/drug_id">Drug Name</th>
      <th><a href="/doses/sort/dosage">Dosage</th>
      <th><a href="/doses/sort/created_at">Date</th>
      <th><a href="/doses/sort/user_id">User</th>
    </tr>
  </thead>

  <% @doses.each do |dose| %>
    <tr>
      <td><%= dose.animal.name %></td>
      <td><%= dose.drug.name %></td>
      <td><%= dose.dosage %> cc</td>
      <td><%= dose.created_at.strftime("%m/%d/%Y") %></td>
      <td><%= dose.user.email %></td>
    </tr>
  <% end %>
</table>
